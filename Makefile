NAME = push_swap

ACT_DIR = srcs/actions
UTIL_DIR = srcs/utils
OPT_DIR = srcs/operations
SORT_DIR = srcs/sorting
LIB_DIR = ./libs

SRCS = main.c \
		${ACT_DIR}/actions.c \
		${UTIL_DIR}/is_number.c \
		${UTIL_DIR}/find_index.c \
		${OPT_DIR}/swap.c \
		${OPT_DIR}/push.c \
		${OPT_DIR}/rotate.c \
		${OPT_DIR}/reverse_rotate.c \
		${SORT_DIR}/sort_mini.c \
		${SORT_DIR}/sort_three_helper.c \
		${SORT_DIR}/sort.c \
		${SORT_DIR}/is_sorted.c \
		${SORT_DIR}/sort_default.c \
		${SORT_DIR}/sort_three_reverse_helper.c \

OBJS = ${SRCS:.c=.o}

CC = cc
CFLAGS = -Wall -Wextra -Werror -Iincludes -Ilibs/my_libft -Ilibs/my_printf

RM = rm -rf

ARGS ?= 2379 6293 475 3046 9178 7110 214 5510 921 9441 7070 2586 2072 1806 4603 6474 6637 2122 9487 4036 2609 7288 7037 5014 8694 4852 3770 1602 2946 2098 6289 9770 930 1954 9475 9027 3720 1137 1725 950 5585 833 3131 2265 6196 7923 9529 8655 2719 1869 4854 7424 4795 1235 5691 4093 1657 7563 4228 7783 7578 1683 4843 7583 2904 6508 495 9683 4862 193 6664 6267 2548 4167 7285 1356 7447 7443 5729 7703 9723 1326 5233 8994 7482 4662 8340 859 8007 9533 1464 93 7560 4219 8188 7795 5174 6780 5664 1661 4473 6882 6938 6236 3808 1839 5590 971 7457 1508 4983 2446 10 9982 6613 2567 9554 9876 709 6348 3876 4807 9342 4587 7182 5703 552 4250 3996 6335 8461 4731 7001 2504 2986 9002 9915 4300 8607 9805 1427 7412 5388 9591 4269 8608 8173 6275 4403 6972 4363 2152 6830 2238 2989 3387 5157 2065 341 241 253 356 4287 1730 7954 7846 1132 201 2687 8875 5560 6720 7780 8391 8975 6655 6794 31 4911 1322 7966 3179 2582 1788 8992 4040 3654 9250 4956 6118 2102 9695 314 7105 5223 1141 4488 1905 4182 2396 4275 3346 5423 6340 5044 4194 961 4781 255 7232 7504 4644 8367 5829 1829 8204 3909 7924 9954 5285 737 3556 165 7130 5830 2009 1660 5357 2012 6990 4679 497 7964 7216 825 5984 7669 4145 7431 4498 9648 9235 4445 7425 1628 3673 7263 4424 1215 6804 7076 6520 9206 962 346 7164 4090 5152 1287 2983 6260 5754 7952 1908 860 1545 6631 9139 5535 9076 2976 1212 9169 672 579 3461 8778 1947 8120 3486 7261 4151 8524 7932 8848 7017 7026 7816 454 1517 1014 1210 2690 9804 6262 7733 4543 696 6741 5696 8923 4809 1732 8041 6040 2398 2088 4530 2523 9145 5309 7854 5216 6469 545 2726 7127 5913 5630 3983 317 1559 8449 5487 5760 8189 4355 2300 5677 2052 2378 3295 4534 7773 8470 4089 3487 4242 1422 6042 3648 3038 3761 8504 5608 4319 3747 8182 4552 5518 5519 8624 9981 9742 9698 281 2738 139 8754 5715 6309 9059 1654 4742 1831 4805 5761 3621 6793 5329 8457 4639 6997 2892 2699 7901 3129 9688 5609 3313 3728 8358 6113 8315 1121 254 6885 438 45 2617 9159 4562 2884 9116 6510 1158 5666 5214 4070 3402 598 7705 287 7948 2630 9021 1272 5181 3543 8609 594 9226 785 6163 5024 5976 1089 3378 7935 8140 5425 7573 7253 7240 4674 1308 302 6036 7587 7175 7680 3532 2724 1318 6495 6964 3604 1289 9071 4787 5692 1984 2817 3853 3525 954 1557 1482 7799 4567 4188 6423 2109 420 4526 4369 1987 564 4565 9106 4273 8013 238 7798 5079 9135 3372 7861 3392 2605 2937 1960 8920 3724 5391 2473 8107 3896 1785 2899 684 4960 622 5916 1868 7888 8291 5783 966 6066 4993 1886 5031 7670 839 3780 3954 3360 296 2980


all: ${NAME}

${NAME}: ${OBJS}
	${MAKE} -C ./libs/my_libft
	${MAKE} -C ./libs/my_printf
	${CC} ${CFLAGS} ${OBJS} ${LIB_DIR}/my_libft/libft.a ${LIB_DIR}/my_printf/libftprintf.a -o ${NAME}

clean: 
	${MAKE} -C ${LIB_DIR}/my_libft fclean
	${MAKE} -C ${LIB_DIR}/my_printf fclean
	${RM} ${OBJS}

fclean: clean
	${RM} ${NAME}

re: fclean all

run:
	./${NAME} ${ARGS}

.PHONY: all clean fclean re run
